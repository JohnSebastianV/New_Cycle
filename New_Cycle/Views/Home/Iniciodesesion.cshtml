@model New_Cycle.Models.Usuario

@{
    ViewBag.Title = "Inicio de Sesión";
}

<h2>Inicio de Sesión</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.CorreoElectronico)
        @Html.TextBoxFor(model => model.CorreoElectronico, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Contraseña)
        @Html.PasswordFor(model => model.Contraseña, new { @class = "form-control" })
    </div>
    <h2></h2>
    <button type="submit" class="btn btn-primary">Iniciar Sesión</button>

    @Html.ActionLink("Registrarse", "Registro", "Home")
}
